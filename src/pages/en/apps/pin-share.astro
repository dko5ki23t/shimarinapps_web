---
// Import the necessary components
import OshigotoHeroSection from "@/components/sections/landing/OshigotoHeroSection.astro";
import OshigotoLayout from "@/layouts/OshigotoLayout.astro";
import { YouTube } from "astro-embed";
import titleLogo from "@images/apps/title_logo.png";
import FeaturesNavs from "@/components/sections/features/FeaturesNavs.astro";
import feature1 from "@images/apps/ScreenShot1.png";
import feature2 from "@images/apps/ScreenShot2.png";
import feature3 from "@images/apps/ScreenShot3.png";
import feature4 from "@images/apps/ScreenShot4.png";
import { SITE } from "@data/constants";

// Define variables for page content
const pageTitle: string = `PinShare | ${SITE.title}`;
---

<OshigotoLayout
  lang="en"
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://shimarinapps.com/apps/oshigoto",
    url: "https://shimarinapps.com/apps/oshigoto",
    name: "Oshigoto | Shimarin apps",
    description: "Box Push + Merge game app",
    isPartOf: {
      "@type": "WebSite",
      url: "https://shimarinapps.com/apps/oshigoto",
      name: "Oshigoto | Shimarin apps",
      description: "Box Push + Merge game app",
    },
    inLanguage: "en-US",
  }}
>
  <OshigotoHeroSection
    withReview={false}
    src={titleLogo}
    alt='"Oshigoto" title logo'
    '
  />
  <div class="my-8 flex items-center justify-center">
    <div class="aspect-w-16 aspect-h-9 w-full max-w-[560px]">
      <YouTube id="f9-VBLEldL0" />
    </div>
  </div>
  <FeaturesNavs
    title=`A new sensation! Box Push + Merge game`
    tabs={[
      {
        heading: "Push items on the stage to merge identical items together.",
        content:
          "Use merge to defeat surrounding enemies and break walls to move forward! Use various abilities and items to rescue the girl who is somewhere!",
        svg: "dashboard",
        src: feature1,
        alt: "Screenshot 1",
        first: true,
      },
      {
        heading: "Game System",
        content:
          "One player movement takes 1 turn, and all other enemy and item movements also occur during this 1 turn. You can play carefully and think carefully without worrying about time.",
        svg: "puzzle",
        src: feature2,
        alt: "Screenshot 2",
        second: true,
      },
      {
        heading: "Simple Operations",
        content:
          "The basic operations are just vertical, horizontal, and diagonal movement! You can also choose from multiple types of control buttons to set.",
        svg: "guides",
        src: feature3,
        alt: "Screenshot 3",
      },
      {
        heading: "Additional Features",
        content:
          "Besides the goal of rescuing the girl, try to get a high score and complete various achievements!",
        svg: "rocket",
        src: feature4,
        alt: "Screenshot 4",
      },
    ]}
  />
</OshigotoLayout>
